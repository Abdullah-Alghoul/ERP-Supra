<openerp>
	<data>
		<record id="button_print_name" model='ir.ui.view'>
			<field name="name">button print</field>
			<field name="model">sale.order</field>
			<field name='type'>form</field>
			<field name="inherit_id" ref='new_sbm_sale_order.quotation_form_view'/>
			<field name="arch" type='xml'>
				<header>
					<button name="print_rfq" type="object" string="Print Quotation"/>
					<button name="print_rfq_web" type="object" string="Print Quotation Web"/>
				</header>
			</field>



		</record>

		<record id="button_print_name_sale_order" model='ir.ui.view'>
			<field name="name">button print sale order</field>
			<field name="model">sale.order</field>
			<field name='type'>form</field>
			<field name="inherit_id" ref='sale.view_order_form'/>
			<field name="arch" type='xml'>
				<header>
					<button name="print_so" type="object" string="Print Sale Order"/>
				</header>
				<xpath expr="//field[@name='note']" position="after">
		    		<field name="order_policy"/>
		    	</xpath>
			</field>
		
		</record>
		
	</data>
</openerp>