<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="invoice_customer_form_ori" model="ir.ui.view">
			<field name="name">account.invoice.form</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form" />
			<field name="arch" type="xml">
				<header position="inside">
					<button name="efak_invoices_export" states="proforma,proforma2,open,paid" string="Export E-Faktur" type="object" groups="sbm_inherit.group_customer_invoice_administrator"/>

					<button name="submit_to_validate" states="draft" string="Submit" type="object" groups="sbm_inherit.group_customer_invoice_admin_creator"/>

					<button name="draft_submited" states="submited" string="Reset to Draft" type="object" groups="sbm_inherit.group_customer_invoice_admin_supervisor"/>
				</header>

				<button name="invoice_proforma2" states="draft" string="PRO-FORMA" groups="account.group_proforma_invoices">
					<button name="invoice_proforma2" states="submited" string="PRO-FORMA" groups="account.group_proforma_invoices"/>
				</button>

				<field name="origin" position="replace" >
					<field name="origin" required="1" groups="base.group_user"/>
				</field>
				
			</field>
		</record>

		<record id="invoice_customer_form_inh" model="ir.ui.view">
			<field name="name">account.invoice.form</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="sbm_inherit.invoice_customer_form" />
			<field name="arch" type="xml">
				<button name="actionPrintCustInv" string="Print Invoice" type="object"  class="oe_highlight" position="replace">
					<button name="actionPrintCustInv" string="Print Invoice" type="object"  class="oe_highlight" attrs="{'invisible':[('state','in',['draft','submited'])]}" />
				</button>

				<button name="actionPrintFaktur" string="Print Faktur" type="object"  class="oe_highlight" position="replace" >
					<button name="actionPrintFaktur" string="Print Faktur" type="object"  class="oe_highlight" attrs="{'invisible':[('state','in',['draft','submited'])]}"/>
				</button>
				<button name="actionPrintKwitansi" string="Print Kwitansi" type="object"  class="oe_highlight" position="replace">
					<button name="actionPrintKwitansi" string="Print Kwitansi" type="object"  class="oe_highlight" attrs="{'invisible':[('state','in',['draft','submited'])]}" />
				</button>
				<xpath expr="//page[@string='Invoice Lines']/field[@name='invoice_line']" position="replace">
					 <field name="invoice_line" nolabel="1" widget="one2many_list" context="{'type': type}" attrs="{'readonly':[('state','not in',['draft','proforma','proforma2','done'])]}">
						<tree string="Invoice Lines">
							<field name="sequence" widget="handle"/>
							<field name="product_id" on_change="product_id_change(product_id, uos_id, quantity, name, parent.type, parent.partner_id, parent.fiscal_position, price_unit, parent.currency_id, context, parent.company_id)" domain="[('sale_ok', '=', True)]"/>
							<field name="name"/>
							<field name="company_id" invisible="1"/>
							<field name="state" invisible="1"/>
							<field name="account_id" groups="account.group_account_user" domain="[('company_id', '=', parent.company_id), ('journal_id', '=', parent.journal_id), ('type', '=', 'other')]" on_change="onchange_account_id(product_id, parent.partner_id, parent.type, parent.fiscal_position,account_id)" states="draft,proforma,proforma2"/>
							<field name="account_analytic_id" groups="analytic.group_analytic_accounting" domain="[('type','!=','view'), ('company_id', '=', parent.company_id)]"/>
							<field name="quantity"/>
							<field name="uos_id" groups="product.group_uom" on_change="uos_id_change(product_id, uos_id, quantity, name, parent.type, parent.partner_id, parent.fiscal_position, price_unit, parent.currency_id, context, parent.company_id)"/>
							<field name="price_unit"/>
							<field name="discount" groups="sale.group_discount_per_so_line"/>
							<field name="amount_discount" groups="sale.group_discount_per_so_line"/>
							<field name="invoice_line_tax_id" widget="many2many_tags" context="{'type':parent.type}" domain="[('parent_id','=',False),('company_id', '=', parent.company_id)]"/>
							<field name="price_subtotal"/>
						</tree>
						
					</field>
				</xpath>
				
			</field>
		</record>

		

		<record id="customer_invoice_supra" model="ir.ui.view">
			<field name="name">customer.invoice.supra.e.faktur</field>
			<field name="type">form</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="ad_account_finance.customer_invoice_supra" />
			<field name="arch" type="xml">
				<field name="faktur_pajak_no" on_change="onchange_format_faktur(faktur_pajak_no)" position="replace">
					<field name="faktur_pajak_no" on_change="onchange_format_faktur(faktur_pajak_no)" required="True" attrs="{'readonly':[('state','not in',['draft'])]}" />
				</field>
			</field>
		</record>
	</data>
</openerp>