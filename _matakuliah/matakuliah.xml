<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	
		<record id="matakuliah_tree_view" model="ir.ui.view">
			<field name="name">matakuliah.tree</field>
			<field name="model">matakuliah</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="matakuliah">
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="student_form_view" model="ir.ui.view">
			<field name="name">matakuliah.form</field>
			<field name="model">matakuliah</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="matakuliah" version="7.0">
									<!-- membuat header -->
					<header>
						<field name='state' widget='statusbar' clickable='true' />
					</header>

					<sheet>
						<group>
							<field name="name" />
							<!-- <field name="state" />	 -->
						</group>
					</sheet>				
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_Matakuliah">
			<field name="name">Matakuliah</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">matakuliah</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<menuitem name='Matakuliah' id='matakuliah'  parent="_Student.Student_submenu" action='action_Matakuliah'/>
	</data>
	

</openerp>