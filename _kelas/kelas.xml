<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="kelas_inherit" model="ir.ui.view">
			<field name="name">student.inherit</field>
			<field name="model">student</field>
			<field name="type">form</field>
			<field name="inherit_id" ref='_Student.student_form_view' />

			<field name="arch" type="xml">
				<field name="alamat" position='after'>
					<field name="kelasmana" attrs="{'readonly':[('state','not in',['draft','approve'])]}" />
				</field>				
			</field>
		</record>
	
		<record id="kelas_tree_view" model="ir.ui.view">
			<field name="name">kelas.tree</field>
			<field name="model">kelas</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Kelas tree">
					<field name="name" />	
					<field name="student_ids" />	
				</tree>
			</field>
		</record>

		<record id="kelas_form_view" model="ir.ui.view">
			<field name="name">kelas.form</field>
			<field name="model">kelas</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="student" version="7.0">
					<sheet>
						<group>
							<field name="name" />
						</group>
						<group>
							<notebook>
								<page string="student">
									<field name="student_ids">
										<form string="Form kelas" version="7.0">
											<sheet>
												<group>
													<field name="name" />
												
												</group>
											</sheet>
										</form>
										<tree>
											<field name="name" />
										</tree>
									</field>
								</page>
						</notebook>
						</group>
					</sheet>
				
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_kelas">
			<field name="name">kelas</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">kelas</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		
		<menuitem name='Kelas' id='kelas_menu_info'  parent="_Student.Student_submenu" action='action_kelas'/>
	</data>
	

</openerp>