<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="account_invoice_customer_form" model="ir.ui.view">
			<field name="name">account.invoice.form</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="account.invoice_form" />
			<field name="arch" type="xml">
				<xpath expr="//button[@string='Cancel Invoice']" position="after">
					<button name="create_invoice_replace_tax" type="object" states="proforma2,cancel" string="Replace Tax" icon="STOCK_ADD" confirm="Are you sure To Replace Tax"/>
				</xpath>
				<field name="date_invoice" position="replace">
					<!-- <attribute name="onchange">onchange_date_invoice()</attribute> -->
					<field name="date_invoice" on_change="onchange_date_invoice(date_invoice)" />
					<field name="tax_period" />
				</field>
			</field>
		</record>
		<record id="inherit_invoice_customer_form" model="ir.ui.view">
			<field name="name">account.invoice.form</field>
			<field name="model">account.invoice</field>
			<field name="inherit_id" ref="sbm_inherit.invoice_customer_form" />
			<field name="arch" type="xml">
					<button name="action_to_tax_replacement" position="replace"/>
			</field>
		</record>				
	</data>
</openerp>